#:import get_color_from_hex kivy.utils.get_color_from_hex


<HomePage>
    MDRelativeLayout:
        md_bg_color: get_color_from_hex("#c3bdf0")
        size_hint_y: .45
        pos_hint: {"top": 1}

        Image:
            source: "images/attendance.png"
            size_hint: None, None
            size: self.texture_size
            x: root.width - self.width
            y: dp(40)
        
    MDRelativeLayout:
        md_bg_color: get_color_from_hex("#F5F5F5")
        pos_hint: {"top": 0.55}
        
    MDLabel:
        text: "Good Morning\nEmployees"
        bold: True
        font_size: "40sp"
        font_name: "fonts/Cairo-SemiBold.ttf"
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#363445")
        pos_hint: {"center_y": .80}
        x: "36dp"
        line_height: .7

    MDGridLayout:
        cols: 2
        size_hint: None, None
        width: root.width
        spacing: "18dp"
        padding: "36dp"
        height: root.height / 1.4
        pos_hint: {"top": 0.65}
            
        MDCard:
            size_hint: 0.5, None
            size: "150dp", "140dp"
            elevation: 6
            radius: 12
            ripple_behavior: True
            on_release: app.change_screen('absen_masuk')


            MDBoxLayout:
                orientation: 'vertical'
                padding: "20dp"
                spacing: "8dp"
                pos_hint: {'center_x': 0.5, 'center_y': 0.45}

                Image:
                    source: 'images/absen_masuk.png'
                    size_hint: None, None
                    size: "92dp", "60dp"
                    pos_hint: {'center_x': 0.5}
                
                MDLabel:
                    text: "Absen Masuk"
                    halign: "center"
                    pos_hint: {'center_x': 0.5}
                    adaptive_height: True
                    font_name: "fonts/Cairo-Bold.ttf"
                    font_size: "14sp"
                      


        MDCard:
            size_hint: 0.5, None
            size: "150dp", "140dp"
            elevation: 6
            radius: 12
            ripple_behavior: True
            on_release: app.change_screen('absen_keluar')
                

            MDBoxLayout:
                orientation: 'vertical'
                padding: "20dp"
                spacing: "8dp"
                pos_hint: {'center_x': 0.5, 'center_y': 0.45}

                Image:
                    source: 'images/absen_keluar.png'
                    size_hint: None, None
                    size: "92dp", "60dp"
                    pos_hint: {'center_x': 0.5}

                MDLabel:
                    text: "Absen Keluar"
                    halign: "center"
                    pos_hint: {'center_x': 0.5}
                    adaptive_height: True
                    font_name: "fonts/Cairo-Bold.ttf"
                    font_size: "14sp"
